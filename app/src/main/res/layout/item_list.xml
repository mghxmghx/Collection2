<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroud_listitem3"
    android:layout_marginTop="5dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/user_card_view_flag"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/germany" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/user_card_view_image"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/no_image" />
        <LinearLayout
            android:id="@+id/texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_card_view_image"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/detailAlcoholName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="HEÄ°NEKEN"
                android:textSize="14sp"
                android:gravity="right"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/detailAlcoholRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="330ml"
                android:textSize="14sp"
                android:gravity="right"
                android:textColor="#929293"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="%5"
                android:textColor="#929293"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Lager"
                android:gravity="right"
                android:textSize="14sp"
                android:textColor="#929293"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>